#!/bin/sh
# $Id: pdfopt,v 1.1 2004/01/14 16:59:47 atai Exp $
# Convert PDF to "optimized" form.

OPTIONS="-dSAFER -dDELAYSAFER"
while true
do
	case "$1" in
	-*) OPTIONS="$OPTIONS $1" ;;
	*)  break ;;
	esac
	shift
done

if [ $# -ne 2 ]; then
	echo "Usage: `basename $0` input.pdf output.pdf" 1>&2
	exit 1
fi

exec gs -q -dNODISPLAY $OPTIONS -- pdfopt.ps "$1" "$2"
